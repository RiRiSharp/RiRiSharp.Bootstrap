@using System.Diagnostics.CodeAnalysis
@using RiRiSharp.Bootstrap.Content.Abbreviations
@inherits TestContext

@code {
    [Theory]
    [InlineData(null)]
    [InlineData("")]
    [InlineData("SimpleTitle")]
    [InlineData("C0mplex TîtLè ~💪💪")]
    public void FullNameAddsCorrectTitleAttribute(string fullName)
    {
        var cut = Render(
            @<BsAbbreviation FullName="@(fullName)">
                <EmptyComponent/>
            </BsAbbreviation>
        );

        cut.MarkupMatches(
            @<abbr class="" title="@(fullName)"></abbr>
        );
    }
}