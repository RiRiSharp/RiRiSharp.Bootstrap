@using RiRiSharp.Bootstrap.Forms.InputGroups
@inherits BunitContext

@code {
    [Theory]
    [InlineData(InputGroupSize.Small, "input-group-sm")]
    [InlineData(InputGroupSize.Regular, "")]
    [InlineData(InputGroupSize.Large, "input-group-lg")]
    public void PassingParametersRendersIntoCorrectBsClass(InputGroupSize formSize, string expected)
    {
        // Arrange + Act
        var cut = Render(@<BsInputGroup Size="formSize"><EmptyComponent/></BsInputGroup>);
        
        // Assert
        cut.MarkupMatches(
            $"""<div class="input-group has-validation {expected}"></div>"""
        );
    }
}