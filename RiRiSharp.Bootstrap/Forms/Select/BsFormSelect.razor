@inherits BsInputBase<TValue>
@typeparam TValue

<select @attributes="AdditionalAttributes" class="@(BsCssClass)" @bind="CurrentValueAsString">
    @if (ChildContent is null)
    {
        @(Options)
    }
    else
    {
        @foreach (var value in Values)
        {
            @(ChildContent(value))
        }
    }
</select>