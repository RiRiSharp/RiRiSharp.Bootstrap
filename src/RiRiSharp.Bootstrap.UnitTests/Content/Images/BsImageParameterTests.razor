@using RiRiSharp.Bootstrap.Content.Images
@inherits BunitContext

@code {
    [Theory]
    [InlineData(null)]
    [InlineData("")]
    [InlineData("source")]
    [InlineData("https://example.com/an-image.jpg")]
    [InlineData("C0mplex TîtLè ~💪💪")]
    public void SrcWorks(string src)
    {
        // Arrange + act
        var cut = Render(
            @<BsImage Src="@(src)"/>
        );

        // Assert
        cut.MarkupMatches(
            @<img class="" src="@(src)"/>
        );
    }
}