@using Wader.BaseComponents
@inherits BsChildContentComponent

@switch (Value)
{
    case 1:
        <h1 @attributes="RenderAttributes">
            @(ChildContent)
        </h1>
        break;
    case 2:
        <h2 @attributes="RenderAttributes">
            @(ChildContent)
        </h2>
        break;
    case 3:
        <h3 @attributes="RenderAttributes">
            @(ChildContent)
        </h3>
        break;
    case 4:
        <h4 @attributes="RenderAttributes">
            @(ChildContent)
        </h4>
        break;
    case 5:
        <h5 @attributes="RenderAttributes">
            @(ChildContent)
        </h5>
        break;
    case 6:
        <h6 @attributes="RenderAttributes">
            @(ChildContent)
        </h6>
        break;
}