@using System.Reflection
@using RiRiSharp.Bootstrap.Helpers
@using DisplayFlex = RiRiSharp.Bootstrap.Helpers.DisplayFlex
<footer class="border-top text-muted mt-3">
    <DisplayFlex Justify="BsJustification.Center">
        <div>
            &copy; @(DateTime.Now.Year) - RiRiSharp.Bootstrap - v@(_version ?? "UNKNOWN")
        </div>
    </DisplayFlex>
</footer>

@code {
    private string? _version;

    protected override void OnInitialized()
    {
        base.OnInitialized();
        SetVersion();
    }

    private void SetVersion()
    {
        _version = typeof(SiteFooter).Assembly.GetName().Version?.ToString();
    }
}