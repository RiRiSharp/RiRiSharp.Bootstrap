@page "/"
@using RiRiSharp.Bootstrap.Components.Buttons
@using RiRiSharp.Bootstrap.Components.Collapse
@using RiRiSharp.Bootstrap.Components.Dropdown

<PageTitle>Home</PageTitle>

<BsCollapse Show="true" @ref="_collapse">
    Hello world!
</BsCollapse>
<BsButton Variant="BsButtonVariant.Primary" @onclick="() => _collapse?.ToggleAsync() ?? Task.CompletedTask">Toggle</BsButton>
<BsButton Variant="BsButtonVariant.Secondary" @onclick="() => _collapse?.ShowAsync() ?? Task.CompletedTask">Show</BsButton>
<BsButton Variant="BsButtonVariant.OutlinePrimary" @onclick="() => _collapse?.CollapseAsync() ?? Task.CompletedTask">Hide</BsButton>

<BsDropdown>
    <BsDropdownToggle Variant="BsButtonVariant.OutlinePrimary" Size="BsButtonSize.Large">
        Dropdown button
    </BsDropdownToggle>
    <BsDropdownMenu>
        <BsDropdownItem>Action!</BsDropdownItem>
        <BsDropdownItem>Action2!</BsDropdownItem>
        <BsDropdownDivider/>
        <BsDropdownItem>Action3!</BsDropdownItem>
    </BsDropdownMenu>
</BsDropdown>
@code {
    private BsCollapse? _collapse;
}
