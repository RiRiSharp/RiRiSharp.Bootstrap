@using System.Diagnostics.CodeAnalysis
@using RiRiSharp.Bootstrap.Core.Content.Abbreviations
@inherits TestContext

@code {
    [Theory]
    [InlineData(null)]
    [InlineData("")]
    [InlineData("SimpleTitle")]
    [InlineData("C0mplex TîtLè ~💪💪")]
    public void FullNameWorks(string fullName)
    {
        var cut = Render(
            @<Abbreviation FullName="@(fullName)">
                <EmptyComponent/>
            </Abbreviation>
        );

        cut.MarkupMatches(
            @<abbr class="" title="@(fullName)"></abbr>
        );
    }

    [Theory]
    [InlineData(AbbreviationType.Default, "")]
    [InlineData(AbbreviationType.Initialism, "initialism")]
    [SuppressMessage("Category", "RZ2012", Justification = "This tests tests explicitly for the Type parameter")]
    public void AbbreviationTypeWorks(AbbreviationType abbreviationType, string expectedClass)
    {
        var cut = Render(
            @<Abbreviation Type="@(abbreviationType)">
                <EmptyComponent/>
            </Abbreviation>
        );

        cut.MarkupMatches(
            @<abbr class="@(expectedClass)"></abbr>
        );
    }
}