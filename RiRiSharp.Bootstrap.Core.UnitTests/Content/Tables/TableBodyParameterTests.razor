@using RiRiSharp.Bootstrap.Core.Content.Tables
@inherits TestContext

@code {
    [Theory]
    [InlineData(false, "")]
    [InlineData(true, "table-group-divider")]
    public void AddingDividerWorks(bool hasDivider, string expectedClass)
    {
        var cut = Render(
            @<TableBody TableGroupDivider="@(hasDivider)">
                <EmptyComponent/>
            </TableBody>
        );

        cut.MarkupMatches(
            @<tbody class="@(expectedClass)"></tbody>
        );
    }
}