@using System.Reflection
@using RiRiSharp.Bootstrap.BsHelpers
@using DisplayFlex = RiRiSharp.Bootstrap.BsHelpers.DisplayFlex
<footer class="border-top text-muted mt-3">
    <DisplayFlex Justify="Justification.Center">
        <div>
            &copy; @(DateTime.Now.Year) - RiRiSharp.Bootstrap - v@(_version)
        </div>
    </DisplayFlex>
</footer>

@code {
    private string _version;

    protected override void OnInitialized()
    {
        base.OnInitialized();
        SetVersion();
    }

    private void SetVersion()
    {
        _version = typeof(SiteFooter).Assembly.GetName().Version?.ToString();
    }
}